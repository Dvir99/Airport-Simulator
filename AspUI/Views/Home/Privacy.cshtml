@model List<TerminalDto>
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1 class="display-4 text-center">Terminals:</h1>
<div class="row justify-content-center align-content-center">
    <table class="border border-dark text-center mt-6">
        <thead>
            <tr>
                <th class="border border-dark">Terminal No.</th>
                <th class="border border-dark">Occupied ?</th>
                <th class="border border-dark">Flight in</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var terminal in Model)
                {
                    <tr>
                        <td class="border border-dark">@terminal.Number</td>
                        @if (terminal.FlightId != 0)
                        {
                            <td class="border border-dark">Yes</td>
                            <td class="border border-dark">@terminal.FlightId</td>

                        }
                        else
                        {
                            <td class="border border-dark">No</td>
                            <td class="border border-dark"> </td>
                        }

                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div class="text-center">
    <a class="btn btn-primary mt-3 text-center" asp-action="Privacy">Refresh</a>
</div>

